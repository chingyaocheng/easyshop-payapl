<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1> <span><%= link_to "Home", products_path  %></span>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ship to address</th>
      <th>Phone number</th>
      <th>Ship to name</th>
      <th>Ship to phone number</th>
      <th>Status</th>
      <th>Customer ip</th>
      <th>Email</th>
      <th>Total</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.ship_to_address %></td>
        <td><%= order.phone_number %></td>
        <td><%= order.ship_to_name %></td>
        <td><%= order.ship_to_phone_number %></td>
        <td>
          <%= form_for order do |f| %>
            <%= f.select :status, Order::STATUS %>
          <% end %>
        </td>
        <td><%= order.customer_ip %></td>
        <td><%= order.email %></td>
        <td><%= number_to_currency(order.total) %> </td>
        <td><%= time_ago_in_words(order.created_at) %> </td>

        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

